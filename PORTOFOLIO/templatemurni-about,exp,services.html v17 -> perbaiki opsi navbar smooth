  <!-- HOME Script -->
  <script>
    function animateText(id, text) {
      const el = document.getElementById(id);
      el.innerHTML = '';
      for (let i = 0; i < text.length; i++) {
        const ch = document.createElement('span');
        ch.className = 'char';
        ch.textContent = text[i];
        ch.style.animationDelay = `${0.6 + i*0.1}s`;
        el.appendChild(ch);
      }
    }
    function getGreeting() {
      const h = new Date().getHours();
      return h < 12 ? 'GOOD MORNING' : h < 18 ? 'GOOD AFTERNOON' : 'GOOD EVENING';
    }
    function getShortMonthName(idx) {
      return ['Jan','Feb','Mar','Apr','May','Jun','Jul','Aug','Sept','Oct','Nov','Dec'][idx];
    }
    function animateInitialDate() {
      const el = document.getElementById('dateNum');
      const ml = document.getElementById('monthLabel');
      const now = new Date(), target = now.getDate(), dur = 3000, start = performance.now();
      ml.textContent = getShortMonthName(now.getMonth());
      function ease(t){return t*(2-t);}
      function tick(ts){
        const prog = Math.min((ts-start)/dur,1);
        el.textContent = String(Math.floor(ease(prog)*target)).padStart(2,'0');
        if(prog<1) requestAnimationFrame(tick);
        else el.textContent = String(target).padStart(2,'0');
      }
      requestAnimationFrame(tick);
    }
    function updateDateTime(){
      const now = new Date();
      const hh = now.getHours().toString().padStart(2,'0');
      const mm = now.getMinutes().toString().padStart(2,'0');
      document.getElementById('timeDisplay').innerHTML = `${hh}<span class="time-separator">:</span>${mm}`;
      const days = ['SUNDAY','MONDAY','TUESDAY','WEDNESDAY','THURSDAY','FRIDAY','SATURDAY'];
      const months = ['JANUARY','FEBRUARY','MARCH','APRIL','MAY','JUNE','JULY','AUGUST','SEPTEMBER','OCTOBER','NOVEMBER','DECEMBER'];
      document.getElementById('dayName').textContent = days[now.getDay()];
      document.getElementById('dateFormat').textContent = `${now.getDate().toString().padStart(2,'0')}.${(now.getMonth()+1).toString().padStart(2,'0')}`;
      document.getElementById('monthName').textContent = months[now.getMonth()];
      document.getElementById('yearNum').textContent = now.getFullYear();
    }
    window.addEventListener('DOMContentLoaded',()=>{
      document.getElementById('greeting').textContent = getGreeting();
      animateText('brandText','ANDEV404');
      animateInitialDate();
      setTimeout(()=>document.querySelector('.initial-loader').remove(),6000);
      updateDateTime();
      setInterval(updateDateTime,1000);
      document.getElementById('mobileMenu').addEventListener('click',()=>{
        document.querySelector('.nav-links').classList.toggle('active');
      });
      document.getElementById('scrollIndicator').addEventListener('click',()=>{
        window.scrollTo({top:window.innerHeight,behavior:'smooth'});
      });
    });
  </script>

  <!-- JavaScript untuk efek tampil/geser box SERVICES berdasarkan tampilan section & Project Story Card -->
  <script>
    // Fungsi untuk mendapatkan jumlah kolom pada .services-right
    function getColumnCount() {
      const servicesRight = document.querySelector('.services-right');
      const style = window.getComputedStyle(servicesRight);
      const gridTemplateColumns = style.getPropertyValue('grid-template-columns');
      return gridTemplateColumns.split(' ').length || 3;
    }

    const servicesSection = document.querySelector('#services');
    const boxes = document.querySelectorAll('.service-box');
    const maxOffset = 50; // Nilai offset maksimum (px)

    // Menggunakan IntersectionObserver untuk mendeteksi tampilan SERVICES
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        let progress = entry.intersectionRatio;
        progress = Math.max(0, Math.min(1, progress));
        boxes.forEach((box, index) => {
          const columns = getColumnCount();
          const row = Math.floor(index / columns);
          let translation = (row % 2 === 0) 
            ? -maxOffset * (1 - progress)
            : maxOffset * (1 - progress);
          box.style.transform = `translateX(${translation}px)`;
          box.style.opacity = progress;
        });
      });
    }, { threshold: [0, 0.25, 0.5, 0.75, 1] });

    observer.observe(servicesSection);

    // Script untuk Project Story Card
    document.addEventListener('DOMContentLoaded', function() {
      const images = [
        'https://github.com/belajarit45/WEBSITE/blob/main/Dashboard%20Monitoring%20Lalu%20Lintas%20Pekanbaru.png?raw=true',
        'https://github.com/belajarit45/WEBSITE/blob/main/Portofolio.png?raw=true'
      ];
      const descriptions = [
        {
          title: "Dashboard Monitoring Lalu Lintas Pekanbaru",
          text: "Solusi digital ini mengintegrasikan data lalu lintas dan cuaca real-time ke dalam antarmuka intuitif dan sederhana, lengkap dengan peta interaktif yang memudahkan pemantauan kondisi jalan serta perencanaan perjalanan dengan cepat dan efisien.",
          url: "https://example.com/dashboard-monitoring"
        },
        {
          title: "Muhammad Andrian - Portofolio",
          text: "Website portofolio ini menonjolkan desain modern dengan antarmuka bersih, mencerminkan kreativitas dan keahlian teknis dalam pengembangan web serta solusi IT. Dirancang dengan kesederhanaan yang memukau, platform ini menghadirkan keunggulan profesional melalui tampilan elegan yang optimal.",
          url: "https://example.com/portfolio"
        }
      ];
      const imageElement = document.querySelector('.portrait');
      const progressFills = document.querySelectorAll('.progress-fill');
      const descTitle = document.querySelector('.desc-title');
      const descText = document.querySelector('.desc-text');
      const descView = document.querySelector('.desc-view');
      const boxes = document.querySelectorAll('.project-top-right .box');
      const storyIndex = document.querySelector('.project-bottom-right .project-box');
      let currentIndex = 0;
      const duration = 5000; // 5 detik per gambar
      let timerId = null;
      let startTime = null;
      let remainingTime = duration;

      function showImage(index) {
        if (timerId) {
          clearTimeout(timerId);
          timerId = null;
        }
        if (index === 0) {
          progressFills.forEach(fill => {
            fill.style.transition = 'none';
            fill.style.width = '0%';
          });
          progressFills.forEach(fill => fill.offsetWidth);
        }
        // Update konten card deskripsi
        descTitle.innerText = descriptions[index].title;
        descText.innerText = descriptions[index].text;
        descView.href = descriptions[index].url;
        // Update gambar pada card utama
        imageElement.src = images[index];

        // â€”â€“â€“â€“â€“â€“ ADDED: ubah isi Box 1â€“4 sesuai story card aktif â€“â€“â€“â€“â€“â€“
        if (index === 0) {
          boxes[0].innerText = '#f5f7fa';
          boxes[1].innerText = '#2c3e50';
          boxes[2].innerText = '#ffffff';
          boxes[3].innerText = '#3498db';
        } else {
          boxes[0].innerText = '#001542';
          boxes[1].innerText = '#FFFFFF';
          boxes[2].innerText = '#D1CBCB';
          boxes[3].innerText = '#888888';
        }

        // update angka di bawah sesuai index (story aktif)
        storyIndex.innerText = index === 0 ? '/01' : '/02';

        // Animasi progress fill untuk gambar aktif
        const currentFill = progressFills[index];
        currentFill.style.transition = `width ${duration/1000}s linear`;
        currentFill.style.width = '100%';
        startTime = Date.now();
        remainingTime = duration;
        timerId = setTimeout(() => {
          currentIndex = (index + 1) % images.length;
          showImage(currentIndex);
        }, duration);
      }

      // Pause/Resume dengan Page Visibility API
      document.addEventListener("visibilitychange", function() {
        if (document.hidden) {
          if (timerId) {
            clearTimeout(timerId);
            timerId = null;
          }
          const elapsed = Date.now() - startTime;
          remainingTime = duration - elapsed;
          const currentFill = progressFills[currentIndex];
          currentFill.style.transition = 'none';
          currentFill.style.width = ((elapsed/duration)*100) + '%';
        } else {
          const currentFill = progressFills[currentIndex];
          currentFill.offsetWidth;
          currentFill.style.transition = `width ${remainingTime/1000}s linear`;
          currentFill.style.width = '100%';
          startTime = Date.now();
          timerId = setTimeout(() => {
            currentIndex = (currentIndex + 1) % images.length;
            showImage(currentIndex);
          }, remainingTime);
        }
      });

      showImage(currentIndex);
    });
  </script>
  
  <!-- Script untuk Falling Boxes di bagian EXPERIENCE -->
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const containerFB = document.querySelector('.falling-container');
      const boxSize = 50;
      const icons = [
        'https://github.com/belajarit45/WEBSITE/blob/main/assets/googledrive-andev404.svg?raw=true',
        'https://github.com/belajarit45/WEBSITE/blob/main/assets/onedrive-andev404.svg?raw=true',
        'https://github.com/belajarit45/WEBSITE/blob/main/assets/dropbox-andev404.svg?raw=true',
        'https://github.com/belajarit45/WEBSITE/blob/main/assets/microsoftexcel2013-andev404.svg?raw=true',
        'https://github.com/belajarit45/WEBSITE/blob/main/assets/microsoftword2013-andev404.svg?raw=true',
        'https://github.com/belajarit45/WEBSITE/blob/main/assets/microsoftpowerpoint2013-andev404.svg?raw=true',
        'https://github.com/belajarit45/WEBSITE/blob/main/assets/canva-andev404.svg?raw=true',
        'https://github.com/belajarit45/WEBSITE/blob/main/assets/teamviewer-andev404.png?raw=true',
        'https://github.com/belajarit45/WEBSITE/blob/main/assets/anydesk-andev404.svg?raw=true',
        'https://github.com/belajarit45/WEBSITE/blob/main/assets/microsoftremotedesktop-andev404.png?raw=true',
        'https://github.com/belajarit45/WEBSITE/blob/main/assets/linux-andev404.png?raw=true',
        'https://github.com/belajarit45/WEBSITE/blob/main/assets/netdata-andev404.svg?raw=true',
        'https://github.com/belajarit45/WEBSITE/blob/main/assets/ngrok-andev404.svg?raw=true',
        'https://github.com/belajarit45/WEBSITE/blob/main/assets/visualstudiocode-andev404.svg?raw=true',
        'https://github.com/belajarit45/WEBSITE/blob/main/assets/xampp-andev404.svg?raw=true',
        'https://github.com/belajarit45/WEBSITE/blob/main/assets/html5-andev404.svg?raw=true',
        'https://github.com/belajarit45/WEBSITE/blob/main/assets/css3-andev404.svg?raw=true',
        'https://github.com/belajarit45/WEBSITE/blob/main/assets/php-andev404.svg?raw=true',
        'https://github.com/belajarit45/WEBSITE/blob/main/assets/python-andev404.svg?raw=true',
        'https://github.com/belajarit45/WEBSITE/blob/main/assets/github-andev404.svg?raw=true'
      ];
      const boxCount = icons.length;

      for (let i = 0; i < boxCount; i++) {
        const box = document.createElement('div');
        box.classList.add('falling-box');

        // Posisi horizontal random
        const maxLeft = containerFB.clientWidth - boxSize;
        box.style.left = Math.random() * maxLeft + 'px';

        // Rotasi acak antara -30Â° hingga +30Â°
        const angle = Math.random() * 60 - 30;
        box.style.setProperty('--angle', angle + 'deg');

        // Drift horizontal acak antara -20px hingga +20px
        const drift = Math.random() * 40 - 20;
        box.style.setProperty('--drift', drift + 'px');

        // Perpanjang delay jatuh hingga 0â€“30 detik agar lebih jarang
        const fallDelay = Math.random() * 30;         // 0â€“30 detik
        const fallDuration = 2 + Math.random() * 3;   // 2â€“5 detik
        const swayDuration = 1 + Math.random() * 2;   // 1â€“3 detik

        box.style.animation =
          `fall ${fallDuration}s ease-in ${fallDelay}s infinite, ` +
          `sway ${swayDuration}s ease-in-out ${fallDelay}s infinite alternate`;

        // Masukkan icon (60% dari ukuran kotak)
        const img = document.createElement('img');
        img.src = icons[i];
        img.style.width = '60%';
        img.style.height = '60%';
        img.style.objectFit = 'contain';
        box.appendChild(img);

        containerFB.appendChild(box);
      }
    });
  </script>
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      // ambil semua link navbar yang merujuk ke bagian halaman
      document.querySelectorAll('.nav-links a').forEach(link => {
        link.addEventListener('click', function(e) {
          e.preventDefault();                            // cegah loncat instant
          const target = document.querySelector(this.getAttribute('href'));
          if (target) {
            target.scrollIntoView({ behavior: 'smooth' }); // scroll halus
          }
        });
      });
    });
  </script>  
